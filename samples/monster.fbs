// example IDL file

namespace MyGame.Sample;

attribute "blueprint";

enum Color:byte (blueprint) { Red = 0, Green, Blue = 2 }

union Any { Monster }  // add more elements..

struct Vec2 (blueprint) {
  x:float;
  y:float;
}

struct Vec3 {
  xy:Vec2;
  z:float;
}

table Monster (blueprint) {
  pos:Vec3;
  mana:int = 150;
  hp:int = 100;
  name:string;
  inventory:[ubyte];
  friends:[Monster];
  color:Color = Blue;
  super_damage:int = 0;
}

root_type Monster;
